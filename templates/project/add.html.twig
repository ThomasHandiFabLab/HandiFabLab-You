{% extends 'base.html.twig' %}

{% block title %}Ajouter un projet - {{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col text-center my-2">
                {{ form_row( form.name ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6 text-center my-2">
                {{ form_row( form.created_at ) }}
            </div>
            <div class="col-6 text-center my-2">
                {{ form_row( form.deadline_at ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6 text-center my-2">
                {{ form_row( form.picture ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6 text-center my-2">
                {{ form_row( form.weight ) }}
            </div>
            <div class="col-6 text-center my-2">
                {{ form_row( form.length ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6 text-center my-2">
                {{ form_row( form.width ) }}
            </div>
            <div class="col-6 text-center my-2">
                {{ form_row( form.height ) }}
            </div>
        </div>
            <div class="invisible">
                {{ form_row( form.price ) }}
            </div>
            <div class="row">
                <div class="col-12 text-center my-2">
                    {{ form_row( form.description ) }}
                </div>
                <div class="col-12 text-center my-2">
                    <button class="btn btn-primary mx-4" type="submit">Ajouter</button>
                    {{ form_end( form ) }}
                </div>
            </div>
    </div>
{% endblock %}